<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_questionitem_bg"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_bankicon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:src="@mipmap/icon_pay" />

    <ImageView
        android:id="@+id/iv_payarrow"
        android:layout_width="@dimen/icon_rightarrow_width"
        android:layout_height="@dimen/icon_rightarrow_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_right"
        android:src="@mipmap/icon_rightarrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_payarrow"
        android:layout_toRightOf="@id/iv_bankicon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_bankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bankshortnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>