<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/lightgrey" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="20dip"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgrey"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/icon_title_bg"
                android:gravity="center_vertical"
                android:minHeight="45dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/font_large_style_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/usertech_bg_padding" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title"
                style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="用户昵称：" />

                <TextView
                    android:id="@+id/tv_consignee"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="用户车型：" />

                <TextView
                    android:id="@+id/tv_car"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text=" 车 牌 号 ：" />

                <TextView
                    android:id="@+id/tv_car_num"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="订单状态：" />

                <TextView
                    android:id="@+id/tv_service_state"
                    style="@style/detail_item_text_style"
                    android:textColor="@color/red" >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/detail_arrow"
                style="@style/detail_item_style"
                android:clickable="true" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="服务详情" />

                <Button
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/ic_keyboard_arrow_right_grey600_36dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_height"
                android:layout_marginTop="@dimen/detail_padding"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_ordermoneytip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/usertech_bg_padding"
                    android:gravity="center_vertical"
                    android:text="订单金额："
                    android:textColor="@color/black"
                    android:textSize="@dimen/username_fontsize" />

                <Button
                    android:id="@+id/btn_modifyprice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:background="@drawable/btn_login_bg"
                    android:text="修改价格"
                    android:textColor="@color/white"
                    android:textSize="@dimen/username_fontsize" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_height"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_toLeftOf="@id/btn_modifyprice"
                    android:layout_toRightOf="@id/tv_ordermoneytip"
                    android:gravity="center_vertical"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="预约时间：" />

                <TextView
                    android:id="@+id/tv_book_time"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="订单编号：" />

                <TextView
                    android:id="@+id/tv_sn"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="下单时间：" />

                <TextView
                    android:id="@+id/tv_add_time"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout style="@style/detail_item_style" >

                <TextView
                    style="@style/detail_item_texttip_style"
                    android:text="备注信息：" />

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/detail_item_text_style" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                style="@style/detail_item_style"
                android:layout_weight="2" >

                <Button
                    android:id="@+id/btn_startservice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_bg"
                    android:text="开始服务"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_completeorder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_bg"
                    android:text="已完成订单"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>