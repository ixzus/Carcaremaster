<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_userinfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_userbg_height"
                android:background="@drawable/userinfo_bg" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/userphoto_height"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.lazycare.carcaremaster.widget.CircularImage
                        android:id="@+id/ci_headphoto"
                        android:layout_width="@dimen/userphoto_width"
                        android:layout_height="@dimen/userphoto_height"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李师傅"
                            android:textColor="@color/white"
                            android:textSize="@dimen/username_fontsize" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_userrank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/icon_usertech_bg"
                                android:padding="@dimen/usertech_bg_padding"
                                android:text="金牌技师"
                                android:textColor="@color/white"
                                android:textSize="@dimen/username_fontsize" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_title"
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="姓        名" />

                    <TextView
                        android:id="@+id/tv_info_name"
                        style="@style/detail_info_item_text_style"
                        android:text="王师傅" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="性        别" />

                    <TextView
                        android:id="@+id/tv_info_sex"
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="年        龄" />

                    <TextView
                        android:id="@+id/tv_info_age"
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="工        龄" />

                    <TextView
                        android:id="@+id/tv_info_workage"
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="手机号码" />

                    <TextView
                        android:id="@+id/tv_info_phonenumber"
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="姓        名" />

                    <TextView
                        style="@style/detail_info_item_text_style"
                        android:text="王师傅" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="性        别" />

                    <TextView
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="年        龄" />

                    <TextView
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="工        龄" />

                    <TextView
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>

                <View style="@style/StyleLine" />

                <LinearLayout
                    style="@style/detail_item_style" >

                    <TextView
                        style="@style/detail_item_texttip_style"
                        android:text="手机号码" />

                    <TextView
                        style="@style/detail_info_item_text_style" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>