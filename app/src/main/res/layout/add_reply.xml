<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey" >

    <EditText
        android:id="@+id/txt_replycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="请输入内容..."
        android:minHeight="180dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/questiondetailwithreply_replybtn_bg_height"
        android:layout_below="@id/txt_replycontent"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_login_bg"
            android:text="发送"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toLeftOf="@id/btn_send"
            android:background="@drawable/btn_login_bg"
            android:text="录音"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toLeftOf="@id/btn_record"
            android:background="@drawable/btn_login_bg"
            android:text="取消"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>