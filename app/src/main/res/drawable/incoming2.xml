<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>
            <item android:bottom="5dp" android:left="4dp" android:right="0dp" android:top="5dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="3dip" />
                    <stroke android:width="1dp" android:color="@color/lightgrey" android:dashWidth="0dp" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/lightgrey" android:dashWidth="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>